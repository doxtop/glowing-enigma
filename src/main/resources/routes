GET        /                controllers.HomeController.index
GET        /list            controllers.HomeController.list
GET        /get/:id         controllers.HomeController.get(id:String)
PUT        /put/:id         controllers.HomeController.put(id:String)
POST       /post            controllers.HomeController.post
DELETE     /adv/:id         controllers.HomeController.del(id:String)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file    controllers.Assets.at(path="/public", file)

